    <LinearLayout android:layout_gravity="right" android:orientation="vertical" android:paddingLeft="@dimen/fragment_horizontal_padding" android:paddingRight="@dimen/fragment_horizontal_padding" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.microsoft.kapp.views.CustomFontButton android:id="@+id/starbucks_remove_card_button" android:layout_width="200dp" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/settings_starbucks_remove_card_button_text" style="@style/starbucksPushButtton"/>
    </LinearLayout>
</LinearLayout>
