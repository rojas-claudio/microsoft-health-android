<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:id="@+id/root_view" android:paddingLeft="@dimen/fragment_horizontal_margin" android:paddingTop="@dimen/fragment_vertical_padding" android:paddingRight="@dimen/fragment_horizontal_margin" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:id="@+id/header_banner" android:layout_width="match_parent" android:layout_height="wrap_content">
        <com.microsoft.kapp.views.CustomGlyphView android:textSize="@dimen/font_size_link" android:textColor="@color/greyHigh" android:id="@+id/group_icon" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/glyph_triangle_down" android:layout_marginEnd="3dp"/>
        <com.microsoft.kapp.views.CustomFontTextView android:gravity="left" android:id="@+id/header_name" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3" style="@style/WorkoutStepHeaderTextStyle"/>
        <com.microsoft.kapp.views.CustomFontTextView android:gravity="left" android:id="@+id/time" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/guided_workout_details_time_header_title" android:layout_weight="1.5" style="@style/WorkoutStepHeaderTextStyle"/>
        <com.microsoft.kapp.views.CustomFontTextView android:gravity="left" android:id="@+id/calories" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/guided_workout_details_calories_header_title" android:layout_weight="1" style="@style/WorkoutStepHeaderTextStyle"/>
    </LinearLayout>
    <View android:id="@+id/divider" android:background="@color/workout_divider" android:paddingTop="@dimen/fragment_vertical_padding" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginTop="5dp" android:layout_marginBottom="2dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/list_view" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>
