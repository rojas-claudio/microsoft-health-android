<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:id="@+id/backLayout" android:background="@color/blackMedium" android:paddingLeft="@dimen/fragment_horizontal_padding" android:paddingRight="@dimen/fragment_horizontal_padding" android:layout_width="match_parent" android:layout_height="@dimen/app_header_bar_height" android:layout_alignParentTop="true">
        <com.microsoft.kapp.views.CustomGlyphView android:gravity="center" android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/glyph_left_arrow" style="@style/Font_backArrow"/>
    </LinearLayout>
    <ScrollView android:background="@color/blackHigh" android:paddingLeft="@dimen/fragment_horizontal_padding" android:paddingTop="6dp" android:paddingRight="@dimen/fragment_horizontal_padding" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/backLayout">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <com.microsoft.kapp.views.CustomFontTextView android:id="@+id/strapp_settings_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/strapp_run_settings_header" style="@style/Font_title"/>
            <com.microsoft.kapp.views.CustomFontTextView android:id="@+id/strapp_settings_subtext1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/strapp_run_settings_subtext1" style="@style/Font_smallBody"/>
            <com.microsoft.kapp.views.CustomFontTextView android:id="@+id/strapp_settings_subtext2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/strapp_run_settings_subtext2" style="@style/Font_smallBody"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/selected_metrics_section" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="15dp">
                <View android:background="@color/primary" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginBottom="20dp"/>
                <com.microsoft.kapp.views.CustomFontTextView android:id="@+id/strapp_settings_selected_metrics_header" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/strapp_run_settings_select_metrics_title" style="@style/Font_smallBody"/>
                <com.microsoft.kapp.views.CustomFontTextView android:textColor="@color/greyHigh" android:id="@+id/strapp_settings_selected_metric1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" style="@style/Font_smallBody"/>
                <com.microsoft.kapp.views.CustomFontTextView android:textColor="@color/greyHigh" android:id="@+id/strapp_settings_selected_metric2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" style="@style/Font_smallBody"/>
                <com.microsoft.kapp.views.CustomFontTextView android:textColor="@color/greyHigh" android:id="@+id/strapp_settings_selected_metric3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" style="@style/Font_smallBody"/>
                <com.microsoft.kapp.views.CustomFontTextView android:textColor="@color/greyHigh" android:id="@+id/strapp_settings_selected_metric4" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" style="@style/Font_smallBody"/>
                <com.microsoft.kapp.views.CustomFontTextView android:textColor="@color/greyHigh" android:id="@+id/strapp_settings_selected_metric5" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" style="@style/Font_smallBody"/>
                <Button android:id="@+id/edit_selected_metrics_button" android:layout_marginTop="25dp" android:text="@string/strapp_run_settings_edit_selected_metrics_label" style="@style/pushButtonsSmall"/>
            </LinearLayout>
            <com.microsoft.kapp.views.CustomFontTextView android:id="@+id/strapp_additional_settings_header" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" style="@style/Font_title"/>
            <com.microsoft.kapp.views.CustomFontTextView android:id="@+id/strapp_additional_settings_subtext" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" style="@style/Font_smallBody"/>
            <Button android:id="@+id/strapp_additional_settings_button" android:visibility="gone" android:layout_marginTop="25dp" style="@style/pushButtonsSmall"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
