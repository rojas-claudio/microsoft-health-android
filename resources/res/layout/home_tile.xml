<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/home_tile_container" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/home_tile_divider" android:background="@color/BlackColor" android:layout_width="match_parent" android:layout_height="1dp" android:layout_alignParentBottom="true"/>
    <com.microsoft.kapp.views.CustomGlyphView android:id="@+id/home_tile_glyph" android:paddingRight="@dimen/home_tile_horizontal_margin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true" style="@style/MetricIconStyle"/>
    <LinearLayout android:gravity="bottom" android:orientation="vertical" android:paddingLeft="@dimen/home_tile_horizontal_margin" android:paddingRight="5dp" android:paddingBottom="@dimen/home_tile_vertical_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/home_tile_glyph" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true">
        <com.microsoft.kapp.views.CustomFontTextView android:id="@+id/home_tile_event_date" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/MetadataTextStyle"/>
        <com.microsoft.kapp.views.CustomFontTextView android:ellipsize="end" android:id="@+id/home_tile_event_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="3dp" android:maxLines="4" style="@style/MetadataTextStyle"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/home_tile_event_metric_layout" android:layout_width="wrap_content" android:layout_height="@dimen/header_tile_metric_height">
            <com.microsoft.kapp.views.CustomFontTextView android:textColor="@color/WhiteColor" android:id="@+id/home_tile_event_metric" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
            <com.microsoft.kapp.views.CustomGlyphView android:textSize="@dimen/SmallIconSize" android:textColor="@color/WhiteColor" android:id="@+id/home_tile_personal_best_icon" android:visibility="gone" android:layout_width="50dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="@string/glyph_bing_sports" android:layout_toRightOf="@+id/home_tile_event_metric" android:layout_alignBaseline="@+id/home_tile_event_metric"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
