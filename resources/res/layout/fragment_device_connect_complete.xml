<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/WhiteColor" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/oobe_header" layout="@layout/oobe_header"/>
