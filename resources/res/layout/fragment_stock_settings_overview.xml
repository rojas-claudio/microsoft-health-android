<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="top" android:background="@color/blackMedium" android:paddingLeft="@dimen/fragment_horizontal_padding" android:paddingRight="@dimen/fragment_horizontal_padding" android:layout_width="match_parent" android:layout_height="@dimen/app_header_bar_height">
        <com.microsoft.kapp.views.CustomGlyphView android:id="@+id/company_stock_settings_back_button" android:layout_width="wrap_content" android:layout_height="match_parent" style="@style/NavigationLeftArrowIconStyle"/>
    </LinearLayout>
