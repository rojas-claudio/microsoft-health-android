        <com.microsoft.kapp.views.CustomFontTextView android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/waiting_title" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/Font_title"/>
