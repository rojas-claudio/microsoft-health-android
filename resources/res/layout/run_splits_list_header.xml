<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:id="@+id/run_chart" android:layout_width="match_parent" android:layout_height="@dimen/chart_height"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="16dp" android:layout_marginRight="15dp" android:weightSum="4">
        <com.microsoft.kapp.views.CustomFontTextView android:gravity="left" android:id="@+id/run_split_header_distance" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/run_splits_distance_header" android:layout_weight="2" style="@style/PrimaryLightTextStyle"/>
        <com.microsoft.kapp.views.CustomFontTextView android:gravity="left" android:id="@+id/run_split_header_duration" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/run_splits_duration_header" android:layout_weight="1" style="@style/PrimaryLightTextStyle"/>
        <com.microsoft.kapp.views.CustomFontTextView android:gravity="left" android:id="@+id/run_split_header_bpm" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/run_splits_bpm_header" android:layout_weight="1" style="@style/PrimaryLightTextStyle"/>
    </LinearLayout>
    <View android:background="@color/LightLineColor" android:layout_width="match_parent" android:layout_height="2dp" android:layout_marginLeft="@dimen/fragment_horizontal_margin" android:layout_marginTop="5dp" android:layout_marginRight="@dimen/fragment_horizontal_margin"/>
</LinearLayout>
