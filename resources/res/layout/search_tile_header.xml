<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:background="@color/top_menu_color" android:paddingLeft="@dimen/guided_workout_margin_left" android:paddingRight="@dimen/guided_workout_margin_right" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="@dimen/guided_workout_category_header_height">
    <FrameLayout android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true">
        <com.microsoft.kapp.views.CustomGlyphView android:id="@+id/clear_search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/glyph_big_x" style="@style/NavigationLeftArrowIconStyle"/>
    </FrameLayout>
    <LinearLayout android:orientation="horizontal" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <FrameLayout android:id="@+id/searchTitleContainer" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_weight="1">
            <com.microsoft.kapp.views.CustomFontTextView android:id="@+id/search_name" android:paddingLeft="6dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/find_a_workout_title" android:singleLine="true" style="@style/Font_title"/>
            <com.microsoft.kapp.views.CustomFontEditText android:id="@+id/search_box" android:focusable="true" android:layout_width="match_parent" android:layout_height="33dp" android:hint="@string/workout_seach_by_name_hint_text" android:singleLine="true" style="@style/SettingsEditTextStyle"/>
        </FrameLayout>
        <com.microsoft.kapp.views.CustomGlyphView android:id="@+id/search_icon" android:paddingTop="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/empty" style="@style/FindIconStyle"/>
    </LinearLayout>
</RelativeLayout>
